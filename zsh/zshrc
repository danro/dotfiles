#!/bin/zsh

PATH=/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin
PATH=$PATH:$HOME/bin # Add user bin to path
PATH=$PATH:$HOME/scripts # Add custom scripts to path
PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH
PATH=$PATH:/Applications/XCode.app/Contents/Developer/usr/bin

# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

# Set name of the theme to load.
ZSH_THEME="danro"

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(node npm)

source $ZSH/oh-my-zsh.sh
export EDITOR='sub'

# Disable annoying spelling help
unsetopt correct_all

# Custom aliases
alias l='ls -lahGo $*'
alias ll='ls -lhGo $*'
alias ks='ksdiff'
alias profile='sub ~/sites/github/dotfiles/zsh/zshrc'
alias subuser='sub ~/sites/github/dotfiles/sublime'
alias shortcuts='sub ~/.dotfiles/zsh/custom/shortcuts.zsh'
alias theme='sub ~/sites/github/dotfiles/zsh/danro.zsh-theme'
alias gitignore='cp -v ~/.dotfiles/git/ignore-project .gitignore'
alias asciifonts='cd /usr/local/lib/node_modules/asciimo && node node-all-fonts.js'
alias clean-asl='sudo rm -rfv /private/var/log/asl/*.asl'
alias upjshint='cp /Users/dan/Sites/GitHub/javascript/jshint/src/stable/jshint.js /Users/dan/Library/Application\ Support/Sublime\ Text\ 2/Packages/SublimeLinter/sublimelinter/modules/libs/jshint/'
