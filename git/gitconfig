[user]
	name = Dan Rogers
	email = dan.rogers@bkwld.com
[core]
	excludesfile = ~/.gitignore
	quotepath = false
[push]
	default = upstream
[diff]
	external = ~/scripts/git-diff-wrapper.sh
[alias]
	st = status
	ci = commit -vam
	co = checkout
	f = fetch
	unstage = reset HEAD
	untrack = rm --cached
	remotes = remote -v
	branches = branch -va --color
	diffs = diff --stat master
	sub = submodule add
	subinit = submodule update --init --recursive
	subpull = submodule foreach git pull origin master
	zip = archive --format zip --output
	setup = branch --set-upstream master origin/master
	ignore = update-index --assume-unchanged
	watch = update-index --no-assume-unchanged