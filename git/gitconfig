[user]
	name = Dan Rogers
	email = dan.rogers@bkwld.com
[core]
	excludesfile = ~/.gitignore
	quotepath = false
[branch "master"]
	remote = origin
	merge = refs/heads/master
[diff]
  external = ~/scripts/git-diff-wrapper.sh
[alias]
	st = status
	ci = commit -vam
	co = checkout
	unstage = reset HEAD
	untrack = rm --cached
	remotes = remote -v
	branches = branch -va --color
	diffs = diff --stat master
	sub = submodule add
	subinit = submodule update --init --recursive
	subpull = submodule foreach git pull origin master
	zip = archive --format zip --output
	pm = push origin master
